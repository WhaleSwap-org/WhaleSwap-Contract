# Copy to `.env` and fill in values.
# This file is safe to commit; DO NOT commit `.env`.

# RPC URLs
POLYGON_RPC_URL=
BSC_RPC_URL=
AMOY_RPC_URL=

# Deployer private key (0x... hex or raw hex; keep this secret)
PRIVATE_KEY=

# Block explorer API key (Etherscan v2 key; usually works across chains).
# Optional: you can also set POLYGONSCAN_API_KEY / BSCSCAN_API_KEY if you prefer.
ETHERSCAN_API_KEY=
POLYGONSCAN_API_KEY=
BSCSCAN_API_KEY=

# Fee config (required by scripts/deploy.js)
ORDER_CREATION_FEE=1

# Fee token addresses per network (required by scripts/deploy.js)
POLYGON_FEE_TOKEN_ADDRESS=
BSC_FEE_TOKEN_ADDRESS=
AMOY_FEE_TOKEN_ADDRESS=

# Fee token decimals per network (required by scripts/deploy.js)
POLYGON_FEE_TOKEN_DECIMALS=
BSC_FEE_TOKEN_DECIMALS=
AMOY_FEE_TOKEN_DECIMALS=

# Allowlist file paths (optional overrides; defaults to allowed-tokens.<network>.json)
POLYGON_ALLOWED_TOKENS_PATH=
BSC_ALLOWED_TOKENS_PATH=
AMOY_ALLOWED_TOKENS_PATH=
